<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.dector.tlamp">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app.name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".connection.ConnectToLampActivity"/>
        <activity android:name=".connection.RequestBluetoothPermissionActivity"/>
        <activity android:name=".connection.NoBluetoothAdapterActivity"/>
        <activity android:name=".connection.BluetoothDevicesListActivity"/>

    </application>

</manifest>